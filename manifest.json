{
    "manifest_version": 2,
    "name": "Bookmark Extension Example",
    "description": "POST details of the current page to a remote endpoint.",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/", 
        "https://*/"
    ]
}